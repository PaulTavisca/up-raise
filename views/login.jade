doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		div.page-header.text-center
			h1 Login to up-raise
		if(!authenticated)
			form(action="/login", method="POST", role="form")
				div.col-md-4.col-md-offset-4
					div.form-group
						label(for="email") Email Address
						input(type="email", id="email", placeholder="Enter email").form-control
					div.form-group
						label(for="password") Password
						input(type="password", id="password", placeholder="Enter Password").form-control
					div.text-center
						button.btn.btn-primary.btn-lg(type="submit") Login